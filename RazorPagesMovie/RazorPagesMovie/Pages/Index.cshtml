@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Главная";
}


<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
        <link rel="manifest" href="/favicon/site.webmanifest">
        <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#212121">
        <title>Главная страница</title>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="/css/style.css">
        <script src="/js/filter-hidden.js"></script>
        
    </head>
    <body>
        <header id="header">
            <div class="header-block">

                <div class="logo">
                    <a href="/index" class="logo-link">HiSTORY</a>
                </div>

                <nav class="nav">
                    <a href="/index" class="nav-link">Главная страница</a>
                    <a href="/forum" class="nav-link">Форум</a>
                    <a href="/library" class="nav-link">Библиотека</a>
                    <a href="/about" class="nav-link">О нас</a>
                    <a href="/login" class="nav-link">Войти</a>
                </nav>

            </div>          
        </header>
                <main id="main">
        
                    <div class="filter-block">
                        <div class="filter-button">Фильтр</div>
                        <div class="filter-hidden ">
                            <div class="filter-datablock">
                                <div class="filter-headline">Дата:</div>
                                <div class="filter-datalist">
                                    <div class="filter-data"><input type="radio" id="r1" name="data" checked><label for="r1">Сначала новые</label></div>
                                    <div class="filter-data"><input type="radio" id="r2" name="data"><label for="r2">Сначала старые</label></div>
                                </div>  
                            </div>
                            <div class="filter-keywordsblock">
                                <div class="filter-headline">Ключевые слова:</div> 
                                <input id="search-keyword" type="text" placeholder="Найти">
                                <div class="filter-keywordlist">
                                    <div class="filter-keyword">
                                        <input type="checkbox" id="1" value="Россия">
                                        <label for="1">Россия</label>
                                    </div>
                                    <div class="filter-keyword">
                                        <input type="checkbox" id="2" value="Америка">
                                        <label for="2">Америка</label>
                                    </div>
                                    <div class="filter-keyword">
                                        <input type="checkbox" id="3" value="Литва">
                                        <label for="3">Литва</label>
                                    </div>
                                    <div class="filter-keyword">
                                        <input type="checkbox" id="4" value="14 век">
                                        <label for="4">14 век</label>
                                    </div>
                                    <div class="filter-keyword">
                                        <input type="checkbox" id="5" value="Великое княжество Литовское">
                                        <label for="5">Великое княжество Литовское</label>
                                    </div>
                                </div>
                            </div>
                        </div>         
                    </div>
        
                    <div class="main-block">
                        @foreach (var article in IndexModel._list)
                        {
                            <a href="/article?open=@article.Id" class="post-item" style="background-image: url(@article.Image);" keywords="@article.Keywords">
                                <div class="post-container">
                                    <div class="post-data">@article.DateCreate.ToString("d")</div>
                                    <div class="post-headline">@article.Description</div>
                                    <div class="post-keyword">@article.Name</div>
                                </div>
                            </a>
                        }

                    </div>
                </main>
        
                
<footer id="footer">
            <div class="footer-block">
                <div class="up">
                    <div class="rollover"></div>
                </div>
            </div>      
        </footer>

        <script src="../js/back-to-top.js"></script>
    </body>
</html>